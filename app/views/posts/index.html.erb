<%= provide(:title,'feed')%>

<body>

	<div class="container-fluid">
		<div class="row">
			<div class="col-2">
				<div class="link-wrap p-1">
					<a href="<%= user_path(current_user.id)%>">
						<%= image_tag current_user.avatar.first, class: "img-fluid pp" %>
						<%= current_user.firstname %></a> <br>

					<div class="mt-2"><i class="fa fa-desktop"></i> some random link</div> <br>
					<span>Shortcut</span><br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<span class="mt-1">Explain</span><br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
					<a href="#"><i class="fa fa-desktop"></i> some random link</a> <br>
				</div>
			</div>
			<div class="col-5">
				<div class="main">
					<div class="topmost">
						<div class="card mt-2">
							<div class="card-header">
								Create Post
							</div>
							<div class="card-body">

								<!-- Button trigger modal -->
								<button type="button" class="btn poster p-3" data-toggle="modal" data-target="#exampleModal">
									What is on your mind ?
								</button>
							</div>
							<div class="card-footer">
								<img src="<%= asset_path('uploader.png')%>" alt="photo-upload">
								<img src="<%= asset_path('feeling.png')%>" alt="photo-upload">
								<img src="<%= asset_path('tag.png')%>" alt="photo-upload">
							</div>
						</div>
					</div>


					<!-- Modal -->
					<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
						aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<%= form_for(:post, url: posts_path) do |f| %>
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLabel">Create Post</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>

								<div class="modal-body">
									<div class="field">
										<%= f.text_area :postcontent, placeholder: " What is on your mind ?", class: "form-control" %>
									</div>
									<div class="field">
										<%= f.file_field :avatar, multiple: true, placeholder: " attach image to post", class: "form-control" %>
									</div>
								</div>
								<div class="modal-footer">
									<%= f.submit "post" ,class: "btn btn-primary postBut" %>
								</div>
								<% end %>
							</div>
						</div>
					</div>













					<div class="next-to-topmost">
						<div class="card mt-2">

							<div class="card-body">

								<div class="row">
									<div class="col-3 p-1">
										<div class="sect"></div>
									</div>
									<div class="col-3 p-1">
										<div class="sect"></div>
									</div>
									<div class="col-3 p-1">
										<div class="sect"></div>
									</div>
									<div class="col-3 p-1">
										<div class="sect"></div>
									</div>
								</div>
							</div>
						</div>

					</div>

					<% @posts.each do | p | %>
					<div class="posted">
						<div class="card mt-2">
							<div class="card-body">
								<div class="photo-and-name">
									<% if p.avatar.empty? %>

									<a href="#">
										<%= image_tag current_user.avatar.first, class: "img-fluid pp" %>
										<%= p.author.lastname.capitalize %> <%= p.author.firstname.capitalize %>

									</a>
									<i class="fa fa-ellipsis-h float-right"></i>
									<div class="text-content p-1 mt-1">
										<p> <%= p.postcontent %></p>
									</div>

									<% else %>

									<a href="#">

										<%= image_tag current_user.avatar.first, class: "img-fluid pp" %>
										<%= p.author.lastname.capitalize %> <%= p.author.firstname.capitalize %>
									</a>
									<i class="fa fa-ellipsis-h float-right"></i>
									<div class="text-content p-1 mt-1">
										<p> <%= p.postcontent %></p>
									</div>
									<%= image_tag p.avatar.first, class: "img-fluid " %>

									<% end %>

								</div>


							</div>

							<div class="card-footer d-flex justify-content-around">
								<i class="fa fa-thumbs-up "> like</i>
								<i class="fa fa-comment "> comment</i>
								<i class="fa fa-share "> share</i>
							</div>

						</div>
					</div>
					<% end %>

				</div>
			</div>


			<div class="col-3">
				<div class="aside-main">
					<div class="suggested">
						<div class="card mt-2">
							<div class="card-body">
								<span class="p-1 pr-1 small">Suggested Pages <a href="#" class="float-right pr-1">see
										all</a></span>

								<div class="suggested-wrap mt-1">
									<div class="suggested-likes">
										<p class="text-center small p-2">30.4k likes</p>
									</div>

									<div class="suggested-page-name small">
										<img src="<%= asset_path('ot.jpg') %>" alt="suggested-page-image-logo">Somme
										Title
									</div>

									<div class="suggested-page-image mt-2">
										<img src="<%= asset_path('ot.jpg') %>" alt="suggested-page-image">

									</div>
									<i class="fa fa-thumbs-up mt-3" style="margin-left: 40%"> like</i>



								</div>


							</div>

						</div>

						<div class="card mt-2">
							<div class="card-body d-flex">
								<span class="lang p-1 pr-1">English (US) · Français (France) · Português (Brasil) ·
									Español ·
									Deutsch
								</span>
								<i class="fa fa-plus p-1"></i>
							</div>
						</div>


					</div>
				</div>
			</div>


			<div class="col-2 p-0">
				<div class="chat-side">
					<div class="instant-game">
						<img src="<%= asset_path('one.png') %>" alt="instant-game">
					</div>
					<div class="your-game">
						<img src="<%= asset_path('two.png') %>" alt="your-game">
					</div>
					<div class="chats">

					</div>
				</div>
			</div>


		</div>
	</div>

</body>