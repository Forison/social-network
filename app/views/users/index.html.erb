<%= provide(:title,'users') %>
<body>
    <div class="container">
        <div class="row">
            <div class="mx-auto col-6">
                <% @users.each do | user |%>
                <div class="card">

                    <div class="card-body d-flex">
                        <img src="" alt="user-pics">
                        <h3 class="mx-auto"><%= user.lastname %> <%= user.firstname %> </h3>
                        <button class="btn btn-primary ml-auto" style="height: 35px;">Add Friend</button> 
                    </div>

                </div>
                <% end %>
            </div>
        </div>
    </div>
</body>